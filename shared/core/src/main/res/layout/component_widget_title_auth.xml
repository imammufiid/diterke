<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/component_widget_title_auth_container_view"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/component_widget_title_auth_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="Sign In"/>

    <View
        android:id="@+id/component_widget_title_auth_div"
        android:layout_width="90dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/component_widget_title_auth_title"
        app:layout_constraintStart_toStartOf="@id/component_widget_title_auth_title"
        app:layout_constraintEnd_toEndOf="@id/component_widget_title_auth_title"
        android:background="@color/green"/>

</androidx.constraintlayout.widget.ConstraintLayout>